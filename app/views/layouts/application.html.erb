<!DOCTYPE html>
<html>
  <head>
    <title>omniauth google example</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'Home', '/', class: 'navbar-brand' %>
        </div>
        <div id="navbar">
          <% if current_user %>
            <ul class="nav navbar-nav pull-right">
              <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav">
              <li><%= link_to 'Twitter', '/#' %></li>
              <li><%= link_to 'Facebook', '/#' %></li>
              <li><%= link_to 'Google+', user_google_oauth2_omniauth_authorize_path %></li>
              <li><%= link_to 'LinkedIn', '/#' %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
          <%= value %>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <p>Created by Duc Nguyen Linh</p>
      </div>
    </div>
  </body>
</html>
